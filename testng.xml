<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Apartment Facility Booking System Test Suite" verbose="1" thread-count="1">

    <!-- Listener for custom reporting -->
    <listeners>
        <listener class-name="com.example.demo.TestResultListener" />
    </listeners>

    <!-- Group all tests in a single test -->
    <test name="Complete System Tests" preserve-order="true">
        <groups>
            <define name="all">
                <include name="servlet" />
                <include name="crud" />
                <include name="di" />
                <include name="hibernate" />
                <include name="jpa-mapping" />
                <include name="many-to-many" />
                <include name="jwt-security" />
                <include name="hql-hcql" />
            </define>
            
            <run>
                <include name="all" />
            </run>
        </groups>
        
        <classes>
            <class name="com.example.demo.ApartmentFacilityBookingSystemTest" />
        </classes>
    </test>

    <!-- Optional: Run specific test groups separately -->
    <test name="Servlet Tests Only">
        <groups>
            <run>
                <include name="servlet" />
            </run>
        </groups>
        <classes>
            <class name="com.example.demo.ApartmentFacilityBookingSystemTest" />
        </classes>
    </test>

    <test name="CRUD Tests Only">
        <groups>
            <run>
                <include name="crud" />
            </run>
        </groups>
        <classes>
            <class name="com.example.demo.ApartmentFacilityBookingSystemTest" />
        </classes>
    </test>

    <test name="Security Tests Only">
        <groups>
            <run>
                <include name="jwt-security" />
            </run>
        </groups>
        <classes>
            <class name="com.example.demo.ApartmentFacilityBookingSystemTest" />
        </classes>
    </test>

</suite>